name:                hade-web
version:             0.1.0.0
license:             BSD3
license-file:        LICENSE
maintainer:          meditans@gmail.com
build-type:          Simple
cabal-version:       >=1.10

executable hade-web
  hs-source-dirs:    app
  main-is:           Main.hs
  build-depends:       base
                     , reflex
                     , reflex-dom
                     , classy-prelude
                     , email-validate
                     , string-conv
                     , jsaddle-warp
  default-language:    Haskell2010
  if impl(ghcjs)
    ghc-options:    -dedupe
    cpp-options:    -DGHCJS_BROWSER
  else
    ghc-options:    -Wall
